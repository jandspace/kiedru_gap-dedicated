.page-section {
  padding: 30px 0;
  @mixin atSmall {
  	padding: 4% 0;
  }
  @mixin atMedium {
  	padding: 4% 0;
  }
  @mixin atLarge {
  	padding: 4% 0;
  }

  .gap-badge {
    display: block;
    width: 80px;
    height: 80px;
    margin: 0 auto 0.5em;
    overflow: hidden;
    border: 1px solid #240F6E;
    border-radius: 50%;
  }
}
